{
  "compilerOptions": {
    "noEmitOnError": true,
    "diagnostics": true,
    "lib": [
      "dom",
      "es2018",
      "esnext"
    ],
    "target": "es2017",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "coverage",
    "dist",
    "__tests__",
    "node_modules",
    "types"
  ]
}
